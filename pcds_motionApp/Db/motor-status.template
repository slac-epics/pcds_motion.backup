record(calc, "$(MOT):_CALC_STATUS") {
  field(CALC, "D<<3|G<<2|L<<1|H")
  field(INPD, "$(MOT).DMOV CPP NMS")
  field(INPG, "$(MOT).MOVN CPP NMS")
  field(INPH, "$(MOT).HLS  CPP NMS")
  field(INPL, "$(MOT).LLS  CPP NMS")
}

