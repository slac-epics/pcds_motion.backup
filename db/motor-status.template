record(calc, "$(MOT):_CALC_STATUS") {
  field(DESC, "$(DESC)")
  field(CALC, "D<<3|G<<2|L<<1|H")
  field(INPD, "$(MOT).DMOV CPP MS")
  field(INPG, "$(MOT).MOVN CPP MS")
  field(INPH, "$(MOT).HLS CPP MS")
  field(INPL, "$(MOT).LLS CPP MS")
}

