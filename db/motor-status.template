record(stringout, "$(MOT):FW_MEANS") {
   field(DESC, "Forward(+) motion means.")
   field(VAL, "$(FW_MEANS)")
}

record(stringout, "$(MOT):REV_MEANS") {
   field(DESC, "Reverse(-) motion means.")
   field(VAL, "$(REV_MEANS)")
}

record(bo, "$(MOT):SET_ZERO") {
   field(DESC, "Write 1 to set position.")
   field(FLNK, "$(MOT):SET_ZERO_1")
}

record(fanout, "$(MOT):SET_ZERO_1") {
   field(LNK1, "$(MOT):SET_ZERO_2")
   field(LNK2, "$(MOT):SET_ZERO_3")
}

record(longout, "$(MOT):SET_ZERO_2") {
   field(OUT,  "$(MOT).SSET")
   field(VAL, "1")
   field(FLNK, "$(MOT)")
}

record(fanout, "$(MOT):SET_ZERO_3") {
   field(LNK1, "$(MOT):SET_ZERO_4")
   field(LNK2, "$(MOT):SET_ZERO_4A")
}

record(longout, "$(MOT):SET_ZERO_4") {
   field(OUT, "$(MOT).RVAL")
   field(VAL, "0")
   field(FLNK, "$(MOT)")
}

record(fanout, "$(MOT):SET_ZERO_4A") {
   field(LNK1, "$(MOT):SET_ZERO_4B")
   field(LNK2, "$(MOT):SET_ZERO_5")
}

record(longout, "$(MOT):SET_ZERO_4B") {
   field(OUT,  "$(MOT).OFF")
   field(VAL, "0")
   field(FLNK, "$(MOT)")
}

record(longout, "$(MOT):SET_ZERO_5") {
   field(OUT, "$(MOT).SUSE")
   field(VAL, "1")
   field(FLNK, "$(MOT)")
}
